<h1> Create your own Animal </h1>


<%= form_for :animal, url: animals_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :life_story %><br>
    <%= f.text_area :life_story %>
  </p>
  <p>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to('back', animals_path) %>
